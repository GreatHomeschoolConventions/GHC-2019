  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true
    },
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": [
        "error",
        "always"
      ],
      "space-unary-ops": [
        "error",
        {
          "overrides": {
            "!": true
          }
        }
      ],
      "yoda": [
        "warn",
        "always"
      ]
    }
  }
